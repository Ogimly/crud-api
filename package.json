{
  "name": "node.js-crud-api",
  "scripts": {
    "start:dev": "cross-env CLUSTER_MODE=single nodemon",
    "start:multi": "cross-env CLUSTER_MODE=multi nodemon",
    "start:inspect": "cross-env CLUSTER_MODE=single nodemon --exec \"node --require ts-node/register --inspect-brk src/index.ts\"",
    "start:inspect:multi": "cross-env CLUSTER_MODE=multi nodemon --exec \"node --require ts-node/register --inspect-brk src/index.ts\"",
    "start:prod": "webpack && node ./dist/index.js",
    "start:prod:multi": "webpack && cross-env CLUSTER_MODE=multi node ./dist/index.js",
    "lint": "eslint src",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ogimly/crud-api.git"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0"
  }
}
